{
  "name": "checkmoji",
  "private": true,
  "license": "MIT",
  "repository": "wooorm/checkmoji",
  "bugs": "https://github.com/wooorm/checkmoji/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "dependencies": {},
  "devDependencies": {
    "bail": "^1.0.2",
    "browserify": "^16.0.0",
    "bundle-collapser": "^1.2.1",
    "collapse-white-space": "^1.0.3",
    "concat-stream": "^1.6.0",
    "cssnano": "^3.10.0",
    "debounce": "^1.1.0",
    "debug": "^3.1.0",
    "emoji-regex": "^6.5.1",
    "esmangle": "^1.0.1",
    "global": "^4.3.2",
    "graceful-fs": "^4.1.11",
    "hast-util-select": "^1.0.1",
    "hast-util-to-string": "^1.0.1",
    "postcss-cli": "^5.0.0",
    "prettier": "^1.12.1",
    "rehype-cli": "^5.0.0",
    "rehype-parse": "^4.1.0",
    "rehype-preset-minify": "^2.0.0",
    "rehype-prevent-favicon-request": "^1.0.0",
    "remark-cli": "^5.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "request": "^2.83.0",
    "stylelint": "^9.0.0",
    "stylelint-config-standard": "^18.0.0",
    "unified": "^6.1.6",
    "xo": "^0.20.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write '**/*.js' && xo --fix && stylelint src/index.css --fix",
    "build:js": "browserify -p bundle-collapser/plugin src/index.js | esmangle > dest/index.js",
    "build:css": "postcss src/index.css > dest/index.css",
    "build:html": "rehype -u preset-minify -u prevent-favicon-request src/index.html -o dest",
    "build:img": "cp -r src/image dest/image",
    "build": "npm run build:js && npm run build:css && npm run build:html && npm run build:img",
    "test": "npm run format && npm run build"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "no-var": "off",
      "object-shorthand": "off",
      "prefer-arrow-callback": "off"
    }
  },
  "postcss": {
    "plugins": {
      "cssnano": {
        "preset": "default"
      }
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
