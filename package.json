{
  "name": "checkmoji",
  "private": true,
  "license": "MIT",
  "repository": "wooorm/checkmoji",
  "bugs": "https://github.com/wooorm/checkmoji/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "devDependencies": {
    "bail": "^1.0.0",
    "browserify": "^17.0.0",
    "collapse-white-space": "^1.0.0",
    "concat-stream": "^2.0.0",
    "cssnano": "^4.0.0",
    "debounce": "^1.0.0",
    "debug": "^4.0.0",
    "emoji-regex": "^9.0.0",
    "global": "^4.0.0",
    "graceful-fs": "^4.0.0",
    "hast-util-select": "^4.0.0",
    "hast-util-to-string": "^1.0.0",
    "postcss-cli": "^8.0.0",
    "prettier": "^2.0.0",
    "rehype-cli": "^10.0.0",
    "rehype-parse": "^7.0.0",
    "rehype-preset-minify": "^5.0.0",
    "rehype-prevent-favicon-request": "^2.0.0",
    "remark-cli": "^9.0.0",
    "remark-preset-wooorm": "^8.0.0",
    "request": "^2.0.0",
    "stylelint": "^13.0.0",
    "stylelint-config-standard": "^22.0.0",
    "tinyify": "^3.0.0",
    "unified": "^9.0.0",
    "xo": "^0.38.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix && stylelint src/index.css --fix",
    "build:js": "browserify src/ -p tinyify -o dest/index.js",
    "build:css": "postcss src/index.css -o dest/index.css",
    "build:html": "rehype -u preset-minify -u prevent-favicon-request src/index.html -o dest",
    "build:img": "cp -r src/image dest/image",
    "build": "npm run build:js && npm run build:css && npm run build:html && npm run build:img",
    "test": "npm run format && npm run build"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "unicorn/prefer-dom-node-append": "off"
    }
  },
  "postcss": {
    "plugins": {
      "cssnano": {
        "preset": "default"
      }
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
