{
  "name": "checkmoji",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "bail": "^1.0.2",
    "browserify": "^16.0.0",
    "bundle-collapser": "^1.2.1",
    "collapse-white-space": "^1.0.3",
    "concat-stream": "^1.6.0",
    "cssnano": "^3.10.0",
    "debounce": "^1.1.0",
    "debug": "^3.1.0",
    "emoji-regex": "^6.5.1",
    "esmangle": "^1.0.1",
    "global": "^4.3.2",
    "graceful-fs": "^4.1.11",
    "hast-util-select": "^1.0.1",
    "hast-util-to-string": "^1.0.1",
    "postcss-cli": "^5.0.0",
    "rehype-cli": "^5.0.0",
    "rehype-parse": "^4.1.0",
    "rehype-preset-minify": "^2.0.0",
    "rehype-prevent-favicon-request": "^1.0.0",
    "request": "^2.83.0",
    "stylelint": "^9.0.0",
    "stylelint-config-standard": "^18.0.0",
    "unified": "^6.1.6",
    "xo": "^0.20.0"
  },
  "scripts": {
    "build:js": "browserify -p bundle-collapser/plugin src/index.js | esmangle > dest/index.js",
    "build:css": "postcss src/index.css > dest/index.css",
    "build:html": "rehype -u preset-minify -u prevent-favicon-request src/index.html -o dest",
    "build:img": "cp -r src/image dest/image",
    "build": "npm run build:js && npm run build:css && npm run build:html && npm run build:img",
    "lint:js": "xo",
    "lint:css": "stylelint src/index.css",
    "lint": "npm run lint:js && npm run lint:css",
    "test": "npm run build && npm run lint"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "xo": {
    "space": true,
    "esnext": false,
    "rules": {
      "no-var": "off",
      "object-shorthand": "off",
      "prefer-arrow-callback": "off"
    }
  },
  "postcss": {
    "plugins": {
      "cssnano": {
        "preset": "default"
      }
    }
  }
}
